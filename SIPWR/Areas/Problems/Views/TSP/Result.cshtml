@model SIPWR.Models.TSPResultViewModel

@{
    ViewBag.Title = "Result";
}

<h2>Result</h2>

<div class="row">
    <table class="table">
        <tr>
            <td>Name</td>
            <td>(X, Y)</td>
        </tr>

        @foreach (var city in Model.Cities)
        {
            <tr>
                <td>@city.Name</td>
                <td>(@city.X, @city.Y)</td>
            </tr>
        }

    </table>
</div>

<div class="form-group">
   Total distance: @Model.Result.Distance
</div>

<div class="form-group">
    Start time: @Model.Result.StartTime
</div>

<div class="form-group">
    End time: @Model.Result.EndTime
</div>

<div class="row">
    <table class="table">
        <tr>
            <td>Name</td>
            <td>(X, Y)</td>
        </tr>

        @foreach (var city in Model.Result.Tour)
        {
            <tr>
                <td>@city.Name</td>
                <td>(@city.X, @city.Y)</td>
            </tr>
        }

    </table>
</div>